---
import { Icon } from 'astro-icon/components';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Location as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),

  address,
  phones,
  hours,
  directions,
  mapEmbedUrl,
  mapLink,
  tokenEndpoint,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <!-- Custom headline with subtitle in parentheses -->
  <div class="mb-8 md:mb-12 text-center">
    {tagline && <p class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase" set:html={tagline} />}
    {title && (
      <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter font-heading text-heading">
        <span set:html={title} />
        {subtitle && <span class="block md:inline text-[0.9rem] min-[400px]:text-base md:text-2xl font-normal text-muted md:ms-2 mt-1 md:mt-0 whitespace-nowrap">({subtitle})</span>}
      </h2>
    )}
  </div>

  <div class="flex flex-col md:flex-row gap-8 md:gap-12">
    <!-- Map Section -->
    {
      mapEmbedUrl && (
        <div class="md:basis-1/2">
          <div class="relative w-full aspect-video rounded-lg overflow-hidden shadow-lg border border-gray-200 dark:border-gray-700">
            <iframe
              src={mapEmbedUrl}
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="خريطة موقع العيادة"
              class="absolute inset-0"
            />
          </div>
          {mapLink && (
            <a
              href={mapLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 mt-4 text-primary hover:text-secondary transition-colors"
            >
              <Icon name="tabler:map-pin" class="w-5 h-5" />
              <span>افتح في خرائط جوجل</span>
              <Icon name="tabler:external-link" class="w-4 h-4" />
            </a>
          )}
        </div>
      )
    }

    <!-- Contact Info & Directions Section -->
    <div class={`${mapEmbedUrl ? 'md:basis-1/2' : 'w-full'}`}>
      <div class="space-y-6">
        <!-- Address -->
        {
          address && (
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-full bg-primary/10 text-primary">
                <Icon name="tabler:map-pin" class="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-semibold text-lg text-gray-900 dark:text-white">العنوان</h3>
                <p class="text-gray-600 dark:text-gray-400 mt-1" set:html={address} />
              </div>
            </div>
          )
        }

        <!-- Directions -->
        {
          directions && (
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-full bg-primary/10 text-primary">
                <Icon name="tabler:route" class="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-semibold text-lg text-gray-900 dark:text-white">كيفية الوصول</h3>
                <p class="text-gray-600 dark:text-gray-400 mt-1" set:html={directions} />
              </div>
            </div>
          )
        }

        <!-- Phones -->
        {
          phones && phones.length > 0 && (
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-full bg-primary/10 text-primary">
                <Icon name="tabler:phone" class="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-semibold text-lg text-gray-900 dark:text-white">الهاتف</h3>
                <div class="mt-1 space-y-1">
                  {phones.map(({ label, number }) => (
                    <div class="flex items-center gap-2">
                      <span class="text-gray-600 dark:text-gray-400">{label}:</span>
                      <a
                        href={`tel:${number.replace(/\s/g, '')}`}
                        class="font-rail text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors"
                        dir="ltr"
                      >
                        {number}
                      </a>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          )
        }

        <!-- Email (dynamically loaded if tokenEndpoint is provided) -->
        {
          tokenEndpoint && (
            <div id="location-email-container" class="flex items-start gap-4 hidden">
              <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-full bg-primary/10 text-primary">
                <Icon name="tabler:mail" class="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-semibold text-lg text-gray-900 dark:text-white">البريد الإلكتروني</h3>
                <a
                  id="location-email-link"
                  href=""
                  class="font-rail text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary transition-colors mt-1 block"
                  dir="ltr"
                >
                </a>
              </div>
            </div>
          )
        }

        <!-- Working Hours -->
        {
          hours && (
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-full bg-primary/10 text-primary">
                <Icon name="tabler:clock" class="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-semibold text-lg text-gray-900 dark:text-white">ساعات العمل</h3>
                <p class="text-gray-600 dark:text-gray-400 mt-1" set:html={hours} />
              </div>
            </div>
          )
        }
      </div>
    </div>
  </div>
</WidgetWrapper>

{tokenEndpoint && (
  <script is:inline define:vars={{ tokenEndpoint }}>
    /* eslint-disable no-var */
    (function() {
      var STORAGE_KEY = 'phone_verification_token';

      function init() {
        var token = localStorage.getItem(STORAGE_KEY);
        if (!token) return;

        fetch(tokenEndpoint, {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: new URLSearchParams({ token: token }),
        })
          .then(function(response) { return response.json(); })
          .then(function(data) {
            if (data.success && data.global && data.global.site && data.global.site.email) {
              var email = data.global.site.email;
              var container = document.getElementById('location-email-container');
              var link = document.getElementById('location-email-link');
              if (container && link) {
                link.href = 'mailto:' + email;
                link.textContent = email;
                container.classList.remove('hidden');
              }
            }
          })
          .catch(function() {
            // Silently fail - email just won't be shown
          });
      }

      // Run on page load and View Transitions
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
      } else {
        init();
      }
      document.addEventListener('astro:page-load', init);
    })();
  </script>
)}
