    // Manual click handler using data-booking-* attributes
    // (data-cal-* triggers Cal.com's auto-binding which conflicts with Astro View Transitions)
    function setupCalButton() {
      document.querySelectorAll('[data-booking-link]').forEach(function(el) {
        el.addEventListener('click', function(e) {
          e.preventDefault();
          const baseLink = el.getAttribute('data-booking-link');
          const namespace = el.getAttribute('data-booking-namespace') || 'clinic';
          const config = JSON.parse(el.getAttribute('data-booking-config') || '{}');

          // Determine booking type from checkbox (default: clinic)
          const inClinicCheckbox = document.getElementById('booking-in-clinic');
          const suffix = (inClinicCheckbox && inClinicCheckbox.checked) ? '/clinic' : '/remote';
          const calLink = baseLink + suffix;

          // Sync theme with AstroWind's current theme state
          config.theme = document.documentElement.classList.contains('dark') ? 'dark' : 'light';
          Cal.ns[namespace]("modal", { calLink: calLink, config: config });
        });
      });
    }

    // Use astro:page-load which fires on initial load and after View Transitions
    document.addEventListener('astro:page-load', setupCalButton);

    // Checkbox label update
    document.addEventListener('astro:page-load', function() {
      const checkbox = document.getElementById('booking-in-clinic');
      const label = document.getElementById('booking-label');
      if (checkbox && label) {
        checkbox.addEventListener('change', function() {
          label.textContent = this.checked ? 'موعد في العيادة' : 'موعد عن بعد (الدفع مسبقًا)';
        });
      }
    });
  </script>
